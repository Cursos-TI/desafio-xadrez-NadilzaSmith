#include <stdio.h>

int main() {
    // Movimento do Bispo
    const int bispo = 5;
    int count_bispo = 0;

    while (count_bispo < bispo) {
        if (count_bispo % 2 == 0) {
            printf("Cima Esquerda\n");
        } else {
            printf("Cima Direita\n");
        }
        count_bispo++;
    }

    // Movimento da Torre
    const int torre = 5;

    for (int x = 0; x < torre; x++) {
        printf("Direita\n");
    }

    // Movimento da Rainha (usando do-while)
    const int rainha = 8;
    int count_rainha = 0;

    do {
        printf("Esquerda\n");
        count_rainha++;
    } while (count_rainha < rainha);

    return 0;
}
